    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chalk": "^4.1.2",
    "glob": "^11.0.0",
    "marked": "^14.1.4",
    "marked-terminal": "^7.2.1"
